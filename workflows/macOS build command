# You will need to install Python to use these commands bwlow to install the Radio Editor on macOS...

python3 -m pip install --upgrade pip
python3 -m pip install pyside6 pyinstaller

pyinstaller --noconfirm --clean --windowed \
  --name "Radio Station Editor" \
  --add-data "ATS_active.png:." \
  --add-data "ATS_inactive.png:." \
  --add-data "ETS2_active.png:." \
  --add-data "ETS2_inactive.png:." \
  radio_editor.py
